<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/akasztofaImageView"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/akasztofa00"/>

    <TextView
        android:id="@+id/kitalalandoSzoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/akasztofaImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="____"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/aktualisBetuTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kitalalandoSzoTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="A"
        android:textColor="#FF0000"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/elozoBetuButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/aktualisBetuTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttonbackround"
        android:text="Előző"/>

    <Button
        android:id="@+id/tippButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/aktualisBetuTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttonbackround"
        android:text="Tippelés"/>
    <Button
        android:id="@+id/kovetkezoBetuButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/aktualisBetuTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttonbackround"
        android:text="Következő"/>

</RelativeLayout>